<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="workoutguide.pentagramsoftware.pl.workoutguide.dashboards.WorkoutDashboardActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Workout Guide Prototype App!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/activity_vertical_margin" />

        <Button
            android:id="@+id/main_activity_unsubscribe_event_bus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="unsubscribe"
            android:textColor="#FF000000" />

        <TextView
            android:id="@+id/main_activity_number_of_rounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_enter_number_of_rounds" />

        <EditText
            android:id="@+id/main_activity_number_of_rounds_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />

        <TextView
            android:id="@+id/main_activity_round_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_enter_round_duration" />

        <EditText
            android:id="@+id/main_activity_round_duration_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />

        <TextView
            android:id="@+id/main_activity_round_intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_enter_round_intensity" />

        <Spinner
            android:id="@+id/main_activity_round_intensity_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/main_activity_break_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_enter_break_duration" />

        <EditText
            android:id="@+id/main_activity_break_duration_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />

        <Button
            android:id="@+id/main_activity_start_workout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Begin workout!"
            android:textColor="#FF000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/main_activity_current_excercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparation"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="; "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/main_activity_workout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time: 0"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" sec; "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/main_activity_current_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/main_activity_total_rounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="26sp" />
    </LinearLayout>

</RelativeLayout>
